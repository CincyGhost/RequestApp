<AuthorizeView Policy="Admin">
    <a class="login-link" href="/AdminApproval">
        <button class="auth-btn btn auth-btn-light btn-sm text-uppercase">Admin</button>
    </a>
</AuthorizeView>
<AuthorizeView>
    <Authorized>
        <a class="login-link" href="/Profile">
             <button class="auth-btn btn auth-btn-light btn-sm text-uppercase">Profile</button>
        </a>
        <a class="login-link" href="MicrosoftIdentity/Account/SignOut">
            <button class="auth-btn btn auth-btn-light btn-sm text-uppercase">Logout</button>
        </a>
    </Authorized>
    <NotAuthorized>
        <a class="login-link" href="MicrosoftIdentity/Account/SignIn">
            <button class="auth-btn btn auth-btn-light btn-sm text-uppercase">Login</button>
        </a>
    </NotAuthorized>
</AuthorizeView>